{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Type Check",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "type-check"],
      "problemMatcher": ["$tsc"],
      "group": "test"
    },
    {
      "label": "Lint",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "lint"],
      "problemMatcher": ["$eslint-stylish"],
      "group": "test"
    },
    {
      "label": "Lint",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint"],
      "problemMatcher": ["$eslint-stylish"],
      "group": "test"
    }
  ]
}
